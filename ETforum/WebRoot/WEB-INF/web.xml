<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.4" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <servlet>
    <servlet-name>action</servlet-name>
    <!--
    <servlet-class>excellence.framework.base.action.GBKActionServlet</servlet-class>
    -->
    <servlet-class>excellence.framework.base.action.GBKActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>
      /WEB-INF/struts-config.xml,
      /WEB-INF/struts/struts-config-forumList.xml,
      /WEB-INF/struts/struts-config-sys.xml,
      /WEB-INF/struts/struts-config-forum-operator.xml,
      /WEB-INF/struts/struts-config-forum-useroper.xml,
      /WEB-INF/struts/struts-config-postQuery.xml,
      /WEB-INF/struts/struts-config-forum-userInfo.xml,
      /WEB-INF/struts/struts-config-forum-moduleManager.xml,
      /WEB-INF/struts/struts-config-forum-controlPanel.xml,
      /WEB-INF/struts/struts-config-forum-search.xml,
      /WEB-INF/struts/struts-config-forum-userManager.xml,
      /WEB-INF/struts/struts-config-forum-replaceManager.xml,
      /WEB-INF/struts/struts-config-forum-log.xml
      </param-value>
      
    </init-param>
    
    <init-param>
      <param-name>debug</param-name>
      <param-value>3</param-value>
    </init-param>
    <init-param>
      <param-name>detail</param-name>
      <param-value>3</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
      <servlet-name>log4j</servlet-name>
      <servlet-class>excellence.framework.base.action.Log4jServlet</servlet-class>
      <init-param>
          <param-name>log4j</param-name>
          <param-value>/WEB-INF/classes/et/config/log4j/log4j.xml</param-value>
      </init-param>
      <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
      <servlet-name>parameter</servlet-name>
      <servlet-class>excellence.framework.base.action.ParameterServlet</servlet-class>
      <init-param>
          <param-name>path</param-name>
          <param-value>/WEB-INF/classes/et/config/parameter/</param-value>

      </init-param>
      <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
 <listener>
    <listener-class>
      et.bo.forum.common.SessionCountListener
    </listener-class>
 </listener>
</web-app>
