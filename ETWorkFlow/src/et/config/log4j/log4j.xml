<?xml version="1.0" encoding="GB2312" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
<appender name="com.hl.file" class="org.apache.log4j.FileAppender">
<!-- 设置通道ID:org.zblog.all和输出方式：org.apache.log4j.RollingFileAppender -->
   <param name="File" value="c:/log1.txt" /><!-- 设置File参数：日志输出文件名 -->
   <param name="Append" value="true" /><!-- 设置是否在重新启动服务时，在原有日志的基础添加新日志 -->
   <!--
   <param name="MaxBackupIndex" value="10" /> 
   -->
   <layout class="org.apache.log4j.PatternLayout">
       <param name="ConversionPattern" value="%d - %c -%-4r [%t] %-5p %c %x - %m%n" /><!-- 设置输出文件项目和格式 -->
   </layout>
</appender>
<!--%r 程序开始后的毫秒数 
    %t 表示日志记录请求的线程
    %p 表示日志语句的优先级别
    %r 与日志请求相关的类名
    %c 日志信息所在类名
    %m%n 日志信息   -->
<appender name="com.hl.fileRoll" class="org.apache.log4j.RollingFileAppender">
   <param name="File" value="c:/log.txt" />
   <param name="Append" value="true" />
   <param name="MaxFileSize" value="10240" /> <!-- 设置文件大小 -->
   <param name="MaxBackupIndex" value="10" /> 
   <layout class="org.apache.log4j.PatternLayout">
       <param name="ConversionPattern" value="%d - %c -%-4r [%t] %-5p %c %x - %m%n" />
   </layout>
</appender>
<appender name="com.hl.console" class="org.apache.log4j.ConsoleAppender">
   <param name="Target" value="System.out " />
   <!--
   <param name="Append" value="true" />
   -->
   <param name="Threshold" value="debug"/>
   <layout class="org.apache.log4j.PatternLayout">
       <param name="ConversionPattern" value="%d - %c -%-4r [%t] %-5p %c %x - %m%n" />
   </layout>
</appender>

<logger name="log"> <!-- 设置域名限制，即zcw.log域及以下的日志均输出到下面对应的通道中 -->
   <level value="debug" /><!-- 设置级别 -->
   <appender-ref ref="com.hl.file" /><!-- 与前面的通道id相对应 -->
   <appender-ref ref="com.hl.console" /><!-- 与前面的通道id相对应 -->
</logger>

<root> <!-- 设置接收所有输出的通道 -->
   <appender-ref ref="com.hl.console"/>
  <!--<appender-ref ref="com.hl.fileRoll"/>-->
</root>

</log4j:configuration>

